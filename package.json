{
  "name": "miniweb",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "start": "yarn run clean && npm-run-all -p start:web-ext start:vite start:tsc:dev",
    "start:vite": "vite",
    "start:tsc:dev": "tsc --watch",
    "start:web-ext": "yarn run profile:chrome:create && yarn run start:web-ext:chrome",
    "profile:chrome:create": "unzip -n utils/chrome-profile.zip -d utils",
    "start:web-ext:chrome": "wait-on dist/manifest.json && web-ext run --source-dir ./dist --target=chromium --start-url=chrome://newtab --keep-profile-changes --chromium-profile='./utils/helpers/chrome-profile'",
    "test": "echo \"there's no tests yet\"",
    "tsc": "tsc",
    "clean": "rm -rf ./dist",
    "dev": "yarn run start",
    "build": "tsc && vite build",
    "pack": "web-ext build -s dist",
    "preview": "vite preview",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "chromatic": "npx chromatic --project-token=CHROMATIC_PROJECT_TOKEN",
    "postinstall": "husky install"
  },
  "dependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "redux-observable": "^2.0.0",
    "reduxed-chrome-storage": "^2.4.8"
  },
  "devDependencies": {
    "@babel/core": "^7.17.5",
    "@mdx-js/react": "^2.0.0",
    "@storybook/addon-actions": "^6.4.19",
    "@storybook/addon-docs": "^6.4.19",
    "@storybook/addon-essentials": "^6.4.19",
    "@storybook/addon-interactions": "^6.4.19",
    "@storybook/addon-links": "^6.4.19",
    "@storybook/react": "^6.4.19",
    "@storybook/testing-library": "^0.0.9",
    "@types/react": "^17.0.33",
    "@types/react-dom": "^17.0.10",
    "@vitejs/plugin-react": "^1.0.7",
    "babel-loader": "^8.2.3",
    "chromatic": "^6.4.3",
    "core-js": "^3.21.1",
    "gitmoji-cli": "^4.9.0",
    "husky": ">=6",
    "lint-staged": ">=10",
    "npm-run-all": "^4.1.5",
    "prettier": "2.5.1",
    "rollup-plugin-chrome-extension": "^4.0.1-15",
    "typescript": "^4.5.4",
    "vite": "^2.8.0",
    "wait-on": "^6.0.1",
    "web-ext": "^6.7.0"
  },
  "packageManager": "yarn@3.2.0",
  "lint-staged": {
    "*.{ts,tsx,md}": "prettier --write"
  }
}
